package ejbholidaybookingutilsapp;

import org.apache.log4j.Logger;

public class LoggerFactory {
	private static Logger logFactory;

	public LoggerFactory(Class<?> name) {
		logFactory = Logger.getLogger(name);
	}

	public void Info(String message) {
		logFactory.info("This is my first log4j's statement");
	}

}
